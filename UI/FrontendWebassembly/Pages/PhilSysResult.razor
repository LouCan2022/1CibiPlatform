@page "/philsys/result"

@using MudBlazor
<MudPaper Class="p-6 d-flex flex-wrap align-items-start gap-6"
          Style="background-color: var(--mud-palette-surface); border-radius: 12px;">

    <!-- LEFT SIDE: IMAGE + BUTTON -->
    <div class="d-flex flex-column align-items-center" style="width: 220px;">
        <MudPaper Elevation="1"
                  Class="d-flex justify-center align-center mb-3"
                  Style="width: 200px; height: 200px; background-color: var(--mud-palette-background); border-radius: 8px;">
            <MudIcon Icon="@Icons.Material.Filled.Image" Size="Size.Large" Color="Color.Secondary" />
        </MudPaper>

        <MudButton Variant="Variant.Outlined"
                   StartIcon="@Icons.Material.Filled.Download"
                   Style="text-transform:none;">
            API Response
        </MudButton>
    </div>

    <!-- RIGHT SIDE: DETAILS -->
    <div class="flex-grow-1" style="min-width: 500px;">
        <table style="width: 100%; border-collapse: collapse;">
            @foreach (var row in InfoRows)
            {
                <tr>
                    <td style="width: 25%; padding: 6px 8px; vertical-align: top; color: var(--mud-palette-text-secondary);">
                        <MudText Typo="Typo.body1">@row.Label1</MudText>
                    </td>
                    <td style="width: 25%; padding: 6px 8px; font-weight: 600;">
                        <MudText Typo="Typo.body1">@row.Value1</MudText>
                    </td>
                </tr>
            }
        </table>
    </div>
</MudPaper>

