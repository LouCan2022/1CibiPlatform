    {
        var result = await UserManagementService.GetAppSubRolesAsync(
            state.Page + 1,
            state.PageSize,
            searchString
        );
        return new TableData<AppSubRolesDTO>
        {
            TotalItems = (int)result.Count,
            Items = result.Data
