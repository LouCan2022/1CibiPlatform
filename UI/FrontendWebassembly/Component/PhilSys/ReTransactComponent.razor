@using MudBlazor
@inject NavigationManager NavigationManager

<MudPaper Elevation="6"
          Class="d-flex flex-column justify-center align-center text-center mx-auto"
          Style="height: 65vh; width: 30wh; padding: 40px 32px;
                 border-radius: 16px; background-color: var(--mud-palette-surface);
                 box-shadow: 0px 10px 35px rgba(0,0,0,0.1);">

    <MudIcon Icon="@Icons.Material.Filled.HourglassEmpty"
             Size="Size.Large"
             Style="font-size: 80px; color: #d9534f; margin-bottom: 20px;" />

    <MudText Typo="Typo.h4" Style="font-weight: bold; margin-bottom: 10px;">
        Session Expired
    </MudText>

    <MudText Typo="Typo.subtitle1" Style="max-width: 420px; color: #555;">
        Your liveness verification session has expired.
        Please start a new session to continue your PhilSys verification process.
    </MudText>

    <ButtonComponent StartIcon="@Icons.Material.Filled.Refresh"
                     OnClick="StartNewSession"
                     Class="theme-button theme-button-active mt-3 w-50">
        Start New Session
    </ButtonComponent>
</MudPaper>

@code {
    private void StartNewSession()
    {
        NavigationManager.NavigateTo("/philsys/idv"); 
    }
}
