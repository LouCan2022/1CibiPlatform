{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "loginEntryPoint": {
        "ClusterId": "onePlatform",
        "Match": {
          "Path": "/token/generatetoken",
          "Methods": [ "POST" ]
        },
        "Transforms": [
          {
            "PathSet": "/login"
          }
        ]
      },
      "SearchCandidateEntryPoint": {
        "ClusterId": "onePlatform",
        "Match": {
          "Path": "/GetTalkpushCandidate",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          {
            "PathSet": "/GetTalkpushCandidate"
          }
        ]
      }
    },
    "Clusters": {
      "onePlatform": {
        "Destinations": {
          "backend1": {
            "Address": "http://apis:8080" // /token/generatetoken
          }
        }
      }
    }
  }
}
