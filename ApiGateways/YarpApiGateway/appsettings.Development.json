{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "LoginEntryPoint": {
        "ClusterId": "onePlatform",
        "Match": {
          "Path": "/token/generatetoken",
          "Methods": [ "POST" ]
        },
        "Transforms": [
          {
            "PathSet": "/login"
          }
        ]
      },
      "LoginWebEntryPoint": {
        "ClusterId": "onePlatform",
        "Match": {
          "Path": "/token/web/generatetoken",
          "Methods": [ "POST" ]
        },
        "Transforms": [
          {
            "PathSet": "/loginweb"
          }
        ]
      },
      "LoginWebRefreshTokenEntryPoint": {
        "ClusterId": "onePlatform",
        "Match": {
          "Path": "/token/web/getnewaccesstoken",
          "Methods": [ "POST" ]
        },
        "Transforms": [
          {
            "PathSet": "/GetNewAccessToken"
          }
        ]
      },
      "IsAuthenticatedEntryPoint": {
        "ClusterId": "onePlatform",
        "Match": {
          "Path": "/auth/isAuthenticated",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          {
            "PathSet": "/isAuthenticated"
          }
        ]
      },
      "LogoutWebEntryPoint": {
        "ClusterId": "onePlatform",
        "Match": {
          "Path": "/auth/logout",
          "Methods": [ "POST" ]
        },
        "Transforms": [
          {
            "PathSet": "/logout"
          }
        ]
      },
      "SearchCandidateEntryPoint": {
        "ClusterId": "onePlatform",
        "Match": {
          "Path": "cnx/gettalkpushcandidate",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          {
            "PathSet": "cnx/gettalkpushcandidate"
          }
        ]
      },
      //For production, uncomment this section and comment the FrontEndDevEntryPoint section
      //"FrontEndEntryPoint": {
      //  "ClusterId": "frontEnd",
      //  "Match": {
      //    "Path": "/{**catchall}"
      //  }
      //},

      "FrontEndDevEntryPoint": {
        "ClusterId": "frontEndDev",
        "Match": {
          "Path": "/{**catchall}"
        }
      }
    },
    "Clusters": {
      "onePlatform": {
        "Destinations": {
          "backend1": {
            "Address": "http://apis:8080" // /token/generatetoken
          }
        }
      },
      //"frontEnd": {
      //  "Destinations": {
      //    "frontend1": {
      //      "Address": "http://frontendwebassembly:8080"
      //    }
      //  }
      //},
      "frontEndDev": {
        "Destinations": {
          "frontend1": {
            "Address": "http://host.docker.internal:5134" // Local development server
          }
        }
      }
    }
  }
}