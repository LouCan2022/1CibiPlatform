{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "LoginEntryPoint": {
        "ClusterId": "onePlatform",
        "Match": {
          "Path": "/token/generatetoken",
          "Methods": [ "POST" ]
        },
        "Transforms": [
          {
            "PathSet": "/login"
          }
        ]
      },
      "SearchCandidateEntryPoint": {
        "ClusterId": "onePlatform",
        "Match": {
          "Path": "/GetTalkpushCandidate",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          {
            "PathSet": "/GetTalkpushCandidate"
          }
        ]
      },
      //For production, uncomment this section and comment the FrontEndDevEntryPoint section
      //"FrontEndEntryPoint": {
      //  "ClusterId": "frontEnd",
      //  "Match": {
      //    "Path": "/{**catchall}"
      //  }
      //},

      "FrontEndDevEntryPoint": {
        "ClusterId": "frontEndDev",
        "Match": {
          "Path": "/{**catchall}"
        }
      }
    },
    "Clusters": {
      "onePlatform": {
        "Destinations": {
          "backend1": {
            "Address": "http://apis:8080" // /token/generatetoken
          }
        }
      },
      //"frontEnd": {
      //  "Destinations": {
      //    "frontend1": {
      //      "Address": "http://frontendwebassembly:8080"
      //    }
      //  }
      //},
      "frontEndDev": {
        "Destinations": {
          "frontend1": {
            "Address": "http://host.docker.internal:5134" // Local development server
          }
        }
      }
    }
  }
}